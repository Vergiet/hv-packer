{
  "builders": [
    {
      "boot_command": [
        "a<enter><wait>a<enter><wait>a<enter><wait>a<enter>"
      ],
      "boot_wait": "1s",
      "communicator": "winrm",
      "cpus": 4,
      "disk_size": "{{ user `disk_size`}}",
      "enable_dynamic_memory": "true",
      "enable_secure_boot": false,
      "generation": 2,
      "guest_additions_mode": "disable",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": 4096,
      "output_directory": "{{ user `output_directory`}}",
      "secondary_iso_images": [
        "{{ user `secondary_iso_image`}}"
      ],
      "shutdown_timeout": "30m",
      "skip_export": true,
      "switch_name": "{{user `switch_name`}}",
      "temp_path": ".",
      "type": "hyperv-iso",
      "vlan_id": "{{user `vlan_id`}}",
      "vm_name": "{{ user `vm_name` }}",
      "winrm_password": "password",
      "winrm_timeout": "8h",
      "winrm_username": "Administrator"
    }
  ],
  "provisioners": [
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "script": "./extra/scripts/phase-1.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "1h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "script": "./extra/scripts/phase-2.ps1",
      "type": "powershell"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "script": "./extra/scripts/phase-3.ps1",
      "type": "powershell"
    },
    {
      "pause_before": "60s",
      "restart_check_command": "powershell -command \"& {Write-Output 'restarted.'}\"",
      "restart_timeout": "2h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "script": "./extra/scripts/windows-updates.ps1",
      "type": "powershell"
    },
    {
      "pause_before": "30s",
      "restart_check_command": "powershell -command \"& {Write-Output 'restarted.'}\"",
      "restart_timeout": "2h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "inline": [
        "Write-Host \"Pausing before next stage\";Start-Sleep -Seconds {{ user `upgrade_timeout` }}"
      ],
      "type": "powershell"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "pause_before": "30s",
      "script": "./extra/scripts/windows-updates.ps1",
      "type": "powershell"
    },
    {
      "pause_before": "30s",
      "restart_check_command": "powershell -command \"& {Write-Output 'restarted.'}\"",
      "restart_timeout": "2h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "inline": [
        "Write-Host \"Pausing before next stage\";Start-Sleep -Seconds {{ user `upgrade_timeout` }}"
      ],
      "type": "powershell"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "pause_before": "30s",
      "script": "./extra/scripts/windows-updates.ps1",
      "type": "powershell"
    },
    {
      "pause_before": "30s",
      "restart_check_command": "powershell -command \"& {Write-Output 'restarted.'}\"",
      "restart_timeout": "2h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "inline": [
        "Write-Host \"Pausing before next stage\";Start-Sleep -Seconds {{ user `upgrade_timeout` }}"
      ],
      "type": "powershell"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "script": "./extra/scripts/phase-5.ps1",
      "type": "powershell"
    },
    {
      "elevated_password": "password",
      "elevated_user": "Administrator",
      "script": "./extra/scripts/windows-compress.ps1",
      "type": "powershell"
    },
    {
      "destination": "C:\\Windows\\System32\\Sysprep\\unattend.xml",
      "source": "{{ user `sysprep_unattended` }}",
      "type": "file"
    },
    {
      "inline": [
        "Write-Output Phase-5-Deprovisioning",
        "if (!(Test-Path -Path $Env:SystemRoot\\system32\\Sysprep\\unattend.xml)){ Write-Output 'No file';exit (10)}",
        "& $Env:SystemRoot\\System32\\Sysprep\\Sysprep.exe /oobe /generalize /shutdown /quiet /unattend:C:\\Windows\\system32\\sysprep\\unattend.xml"
      ],
      "type": "powershell"
    }
  ],
  "variables": {
    "disk_size": "",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "iso_url": "",
    "output_directory": "",
    "secondary_iso_image": "",
    "switch_name": "",
    "sysprep_unattended": "",
    "upgrade_timeout": "",
    "vagrant_sysprep_unattended": "",
    "vlan_id": "",
    "vm_name": ""
  }
}